{
  "manifest_version": 3,
  "name": "What Hacker News Says",
  "version": "0.3.0",
  "description": "Easily find Hacker News threads about the page you're currently browsing.",
  "homepage_url": "https://github.com/omoindrot/what-hn-says-webext",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "96": "assets/icon-96.png",
    "128": "assets/icon-128.png",
    "256": "assets/icon-256.png"
  },

  "permissions": [
    "activeTab",
    "tabs"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "browser_style": false,
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png"
    },
    "default_title": "Click to find what HN says",
    "default_popup": "popup.html"
  }

}
